{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "RAIN-GO-AWAY Flask App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [],
            "serverReadyAction": {
                "pattern": "Running on (https?://[^\\s]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}