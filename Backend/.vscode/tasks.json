{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start RAIN-GO-AWAY Backend",
            "type": "shell",
            "command": "python",
            "args": ["app.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "üåßÔ∏è.*starting",
                    "endsPattern": "Running on.*"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}